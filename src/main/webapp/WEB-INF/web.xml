<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.5"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee   http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<!-- 第一步，从classpath路径下加载spring配置文件 -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:spring-context.xml</param-value>
	</context-param>

	<!-- 第二步,启动spring的监听器，加载第一步的配置文件到spring框架 -->
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>

	<!-- 系统启动时给application设置静态资源目录 
		assert,css,image,js
	-->
	<listener>
		<listener-class>
			com.yq.core.listener.AssertUrlListener
		</listener-class>
	</listener>

	<!-- 第三步,设定spring拦截请求的后缀 ，此处默认使用yq-servlet.xml start-->
	<servlet>
		<servlet-name>yq</servlet-name>
		<servlet-class>
			org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<!-- 可以自定义servlet.xml配置文件的位置和名称，默认为WEB-INF目录下，
			名称为[<servlet-name>]-servlet.xml，如spring-servlet.xml
			<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/spring-servlet.xml</param-value>&nbsp; 默认
			</init-param>
		-->
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>yq</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<!-- 第三步,设定spring拦截请求的后缀 end-->

	<!-- filter 1使用spring自带的拦截器设置字符为utf8 
		过滤的配置顺序与servlet无关，
		但是过滤器之间的顺序是有关的-->
	<filter>
		<filter-name>springUtf8Encoding</filter-name>
		<filter-class>
			org.springframework.web.filter.CharacterEncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>springUtf8Encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- 使用spring自带的拦截器设置字符为utf8 end-->

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>